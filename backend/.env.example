# PostgreSQL Database Configuration
# IMPORTANT: Copy this file to .env and update with your actual credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=loglytics_ai

# Database URL (will be constructed automatically from above values)
# Format: postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/loglytics_ai

# Application Settings
DEBUG=True
APP_NAME=Loglytics AI
APP_VERSION=1.0.0

# Security - IMPORTANT: Generate a secure random key for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# LLM Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_LLM_MODEL=llama3.2:3b

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True
FROM_EMAIL=noreply@loglytics.ai

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_PASSWORD_RESET=True
ENABLE_API_KEYS=True
ENABLE_LIVE_LOGS=True
ENABLE_ANALYTICS=True
